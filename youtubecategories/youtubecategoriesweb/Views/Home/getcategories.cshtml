@{
    ViewData["Title"] = "Swathi Priya Annavarapu";
}
@model IEnumerable<YoutubeCategories.Repository.Categories>


<table class="table">
    <thead>
        <tr>
            <th>
                Video Categories
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model is null || Model.Count() <= 0){
        <tr>
                <td>
                    Oops! This Region does not have any video Categories.
                </td>
            </tr>
        }
        else{
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.CategoryName, "getvideos", "home", new { id = item.Id }, null)
                </td>
            </tr>
        }
        }
    </tbody>
</table>